<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:civ="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="10dp"
        android:text="Change SPIN"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#fff" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="#6f4ace"
            android:paddingTop="5dp"
            android:layout_marginBottom="10dp"
            android:textColorHint="#fff">

            <EditText
                android:id="@+id/old_spinTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#6f4ace"
                android:hint="Old SPIN"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="#fff" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_spinword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="#6f4ace"
            android:layout_marginBottom="10dp"
            android:paddingTop="5dp"
            android:textColorHint="#fff">

            <EditText
                android:id="@+id/new_spinTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#6f4ace"
                android:hint="New SPIN"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="#fff" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_spin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="#6f4ace"
            android:paddingTop="5dp"
            android:layout_marginBottom="10dp"
            android:textColorHint="#fff">

            <EditText
                android:id="@+id/confirm_spinTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#6f4ace"
                android:hint="Confirm SPIN"
                android:padding="10dp"
                android:inputType="textPassword"
                android:textColor="#fff" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/changeBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change"
            android:textSize="20dp"
            android:background="@color/colorAccent"
            android:textColor="#fff"/>
    </LinearLayout>
</LinearLayout>